<h2>New Product</h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <div class="form-group">
    <%= f.input :category_id, as: :select, collection: @categories, label: "類別" %>
  </div>

  <div class="group" style="margin-bottom: 30px;">
    <%= f.submit "Submit", data: { disable_with: "Submiting..."} %>
  </div>

<% end %>

<script>
  autosize($('#product_description'));
</script>
